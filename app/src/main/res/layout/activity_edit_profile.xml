<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akashseth.cycling.EditProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profileEdit">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/default_profile"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:textSize="15.6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#707070"
                        android:layout_below="@+id/profileImage"
                        android:text="Akash seth"
                        android:id="@+id/profileName" />

                    <TextView
                        android:textSize="15.6dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#707070"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/profileName"
                        android:text="+91945121208"
                        android:id="@+id/profileMobNo" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstnameLayout"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp">

                        <EditText
                            android:id="@+id/firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="First name"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#707070"
                            android:textSize="15.6dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/firstnameLayout"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/firstnameLayout">

                        <EditText
                            android:id="@+id/lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Last name"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#707070"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="15.6dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/ageLayout"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/firstnameLayout"
                        android:layout_alignLeft="@+id/firstnameLayout">

                        <EditText
                            android:id="@+id/age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Age"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#707070"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="15.6dp" />

                    </android.support.design.widget.TextInputLayout>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ageLayout"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_alignLeft="@+id/firstnameLayout">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:id="@+id/male"
                            android:checked="false"
                            android:fontFamily="sans-serif"
                            android:textColor="#707070"
                            android:textSize="15.6dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:text="Female"
                            android:id="@+id/female"
                            android:checked="false"
                            android:fontFamily="sans-serif"
                            android:textColor="#707070"
                            android:textSize="15.6dp" />
                    </RadioGroup>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--action bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_tools"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ff2851"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"></android.support.v7.widget.Toolbar>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
